<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seocks.shopping.mapper.JspmemberMapper">
    <insert id="createUser" parameterType="com.seocks.shopping.model.Jspmember">
        INSERT INTO JSPMEMBER
        (
            ID
           ,PASS
           ,NAME
           ,EMAIL
           ,MTEMP
           ,MADDRESS1
           ,MADDRESS2
           ,GENDER
           ,BIRTHDAY
           ,INFO
        )
        VALUES
        (
            #{user.id}
           ,#{user.pass}
           ,#{user.name}
           ,#{user.email}
           ,#{user.mtemp}
           ,#{user.maddress1}
           ,#{user.maddress2}
           ,#{user.gender}
           ,#{user.birthday}
           ,#{user.info}
        )
    </insert>

    <select id="getUser" resultType="com.seocks.shopping.model.Jspmember">
      SELECT ID
            ,PASS
            ,NAME
            ,EMAIL
            ,MTEMP
            ,MADDRESS1
            ,MADDRESS2
            ,GENDER
            ,BIRTHDAY
            ,INFO
        FROM JSPMEMBER
       WHERE ID = #{id}
    </select>

    <select id="getUsers" resultType="com.seocks.shopping.model.Jspmember">
        SELECT ID
              ,PASS
              ,NAME
              ,EMAIL
              ,MTEMP
              ,MADDRESS1
              ,MADDRESS2
              ,GENDER
              ,BIRTHDAY
              ,INFO
              ,PHONE
          FROM JSPMEMBER
         WHERE UPPER(ID) != 'ADMIN'
         ORDER BY NAME
    </select>

    <update id="updateUser" parameterType="com.seocks.shopping.model.Jspmember">
        UPDATE JSPMEMBER
           SET PASS      = #{user.pass}
              ,NAME      = #{user.name}
              ,EMAIL     = #{user.email}
              ,MTEMP     = #{user.mtemp}
              ,MADDRESS1 = #{user.maddress1}
              ,MADDRESS2 = #{user.maddress2}
              ,GENDER    = #{user.gender}
              ,BIRTHDAY  = #{user.birthday}
              ,INFO      = #{user.info}
              ,PHONE     = #{user.phone}
         WHERE ID        = #{user.id}
    </update>

    <delete id="deleteUser">
        DELETE JSPMEMBER WHERE ID = #{id}
    </delete>
</mapper>
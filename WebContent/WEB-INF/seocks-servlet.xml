<!-- 컨트롤러 클래스 실행후 리턴할 jsp 선언  -->
<bean id="viewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver">
	<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
	<property name="prefix" value="/WEB-INF/jsp/"/>
	<property name="suffix" value=".jsp"/>
</bean>



	<context:component-scan use-default-filters="false" base-package="com">
		<context:include-filter expression="org.springframework.stereotype.Service" type="annotation"/>
		<context:include-filter expression="org.springframework.stereotype.Repository" type="annotation"/>
		<context:include-filter expression="org.springframework.stereotype.Component" type="annotation"/>
	</context:component-scan>

	<tx:annotation-driven/>

	<mvc:annotation-driven/>




	<!-- 회원가입,수정,삭제,검색 할수 있는 클래스(빈)를 등록 (의존관계설정 DI) -->
	<bean id="seocksDao" class="com.seocks.old.model.SeocksDAO"  p:dataSource-ref="dataSource"  />

	<!-- 데이터 베이스 설정빈을 등록(오라클용으로 선언)연결  -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<!-- 각종 오라클 설정소스 -->
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:ORCL"/>
		<property name="username" value="c##shopdb"/>
		<property name="password" value="imsi00"/>
	</bean>

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
		<property name="mapperLocations" value="classpath*:mybatis/mappers/**/*.xml" />
		<property name="configuration">
			<bean class="org.apache.ibatis.session.Configuration">
				<property name="mapUnderscoreToCamelCase" value="true"/>
				<property name="autoMappingBehavior" value="PARTIAL"/>
			</bean>
		</property>
	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.seocks.shopping.mapper" />
		<property name="sqlSessionFactoryBeanName" value="sqlSessionFactory" />
	</bean>



</beans>